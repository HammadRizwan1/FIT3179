{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Earthquake Properties Bubble Chart",
  "data": {
    "url": "https://raw.githubusercontent.com/HammadRizwan1/FIT3179/main/earthquakes_cleaned_countries.csv"
  },
  "layer": [
    {
      "mark": {
        "type": "circle",
        "tooltip": {"content": "encoding"},
        "opacity": 0.7, // Add opacity for better visibility of overlapping bubbles
        "stroke": "white", // Add white stroke for better bubble separation
        "strokeWidth": 1 // Customize stroke width
      },
      "encoding": {
        "x": {
          "field": "sig",
          "type": "quantitative",
          "title": "Significance",
          "scale": {"domain": [600, 3000]}
        },
        "y": {
          "field": "depth",
          "type": "quantitative",
          "title": "Depth",
          "scale": {"domain": [0, 700]} // Customize the y-axis domain
        },
        "size": {
          "field": "magnitude",
          "type": "quantitative",
          "title": "Magnitude",
          "scale": {"type": "sqrt", "domain": [6, 9], "range": [20, 400]} // Use square root scale for size
        },
        "color": {
          "field": "alert",
          "type": "nominal",
          "title": "Alert Level",
          "scale": {
            "domain": ["green", "orange", "red", "yellow"],
            "range": ["#008000", "#FFA500", "#FF0000", "#FFFF00"]
          }
        },
        "tooltip": [
          {"field": "title", "type": "nominal", "title": "Title"},
          {"field": "sig", "type": "quantitative", "title": "Significance"},
          {"field": "depth", "type": "quantitative", "title": "Depth"},
          {"field": "alert", "type": "nominal", "title": "Alert Level"},
          {"field": "magnitude", "type": "quantitative", "title": "Magnitude"}
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"}, // Remove chart border
    "axis": {"grid": false}, // Remove gridlines
    "background": "#a29a9a" // Add a light background color
  }
}

